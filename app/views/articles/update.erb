<% if current_user == @article.user%>
<div class="edit_article_form">
  <form action="/articles/<%= @article.id %>" method="POST">
    <input type="hidden" name="_method" value="PUT">

    <input type="text" name="article[title]" value="<%= @article.title %>" placeholder="Title"><br>
    <input type="text" name="article[photo]" value="<%= @article.photo %>" placeholder="Your Photo URL"><br>
    <input class="content-box" type="text" name="article[content]" value="<%= @article.content %>" placeholder="Content"><br>

    <input type="submit" value="Update Article">
  </form>
</div>
<% end %>